<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>Dadrass.Dev.Cron</PackageId>
        <Title>Dadrass.Dev Cron Job</Title>
        <Authors>Alireza Dadrass</Authors>
        <Description>A .NET library that provides a flexible cron job scheduling system, allowing jobs to run on specified patterns. This package includes utility classes to define complex timing patterns and execute tasks at intervals specified by the user.</Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Copyright>MIT</Copyright>
        <PackageProjectUrl>https://github.com/Dadrass-Dev/Cron.git</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Dadrass-Dev/Cron.git</RepositoryUrl>
        <AssemblyVersion>2.2.1</AssemblyVersion>
        <FileVersion>2.2.1</FileVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicense>https://github.com/Dadrass-Dev/Cron?tab=MIT-1-ov-file</PackageLicense>
        <Version>2.2.1</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>icon.png</PackageIcon>
        <RepositoryType>Public</RepositoryType>
        <PackageTags>Cron job, Timing, Interval</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\net8.0\Dadrass.Dev.Cron.xml</DocumentationFile>
    </PropertyGroup>
    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath=""/>
        <None Include="../LICENSE" Pack="true" PackagePath=""/>
        <None Include="../icon.png" Pack="true" PackagePath=""/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Dadrass.Dev.Expression" Version="1.0.0"/>
    </ItemGroup>
</Project>
